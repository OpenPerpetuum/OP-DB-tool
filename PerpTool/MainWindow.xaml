<Controls:MetroWindow  x:Class="PerpTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerpTool"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        mc:Ignorable="d"
        Title="The OpenPerpetuum DB Editing Tool - AWESOME Edition" d:DesignHeight="600" d:DesignWidth="800" Height="700" Width="800" TitleCharacterCasing="Normal" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="552">
            <MenuItem Header="Players/Accounts" Height="30" >
                <MenuItem Header="Characters"/>
            </MenuItem>
            <MenuItem Header="Zones" Height="30">
                <MenuItem Header="Zone Maintenance" Command="{Binding ZoneMaintenanceCommand}"/>
            </MenuItem>
        </Menu>
        <dragablz:TabablzControl Name="TabCtrl" ShowDefaultCloseButton="True" ItemsSource="{Binding TabContents}" Background="DarkGray" Margin="0,30,0,0" />
    </Grid>
</Controls:MetroWindow>
