<Window x:Class="PerpTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerpTool"
        mc:Ignorable="d"
        Title="The Perpetuum DB Editing Tool - Hacky Edition" Height="350" Width="525">
    <Grid>
        <TabControl Margin="10,0,9.667,9.667">
            <TabItem Header="Edit Item Properties">
                <Grid Background="#FFE5E5E5">
                    <ComboBox Name="combo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="473" ItemsSource="{Binding EntityItems}" DisplayMemberPath="Name" SelectedValuePath="Definition" DropDownClosed="ComboBox_DropDownClosed"/>
                    <DataGrid Margin="10,37,9.333,35.667" ItemsSource="{Binding FieldValuesList}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Field" Width="300" Binding="{Binding FieldName}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Value" Width="*" Binding="{Binding FieldValue}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Save Stuff" Margin="216,0,0,9.667" Click="Button_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="Give Items / Account Stuff">
                <Grid Background="#FFE5E5E5">
                    <ComboBox HorizontalAlignment="Left" Margin="112,21,0,0" VerticalAlignment="Top" Width="264" ItemsSource="{Binding AccountsList}" DisplayMemberPath="email" SelectedValuePath="accountID"/>
                    <Label Content="Account" HorizontalAlignment="Left" Margin="54,20,0,0" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" Margin="112,47,0,0" VerticalAlignment="Top" Width="264"/>
                    <Label Content="Character" HorizontalAlignment="Left" Margin="46,43,0,0" VerticalAlignment="Top"/>
                    <Button Name="GetAccounts" Content="Get Accts" HorizontalAlignment="Left" Margin="381,22,0,0" VerticalAlignment="Top" Width="75" Click="GetAccounts_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
